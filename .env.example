# =================================================================
# CONFIGURATION DU SYSTEME DE GESTION MUNICIPALE
# =================================================================

# TYPE DE BASE DE DONNEES
# Options: 'sqlite', 'mysql', 'postgresql'
# Par défaut: sqlite (pour développement local)
# Pour WAMPSERVER: mysql
DB_TYPE=sqlite

# =================================================================
# CONFIGURATION MYSQL (WAMPSERVER)
# =================================================================
# Décommenter ces lignes pour utiliser WAMPSERVER MySQL

# DB_TYPE=mysql
# DB_HOST=localhost
# DB_NAME=mairie_db
# DB_USER=root
# DB_PASSWORD=
# DB_PORT=3306

# OU avec un utilisateur dédié (recommandé):
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_NAME=mairie_db
# DB_USER=mairie_user
# DB_PASSWORD=mairie2025
# DB_PORT=3306

# =================================================================
# CONFIGURATION POSTGRESQL (SERVEUR)
# =================================================================
# Décommenter ces lignes pour utiliser PostgreSQL

# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_NAME=mairie_db
# DB_USER=mairie_user
# DB_PASSWORD=votre_mot_de_passe_securise
# DB_PORT=5432

# =================================================================
# CONFIGURATION APPLICATION
# =================================================================

# Port de l'application Streamlit
APP_PORT=8501

# Adresse d'écoute (0.0.0.0 pour accès réseau, localhost pour local uniquement)
APP_HOST=0.0.0.0

# Mode debug (true/false)
DEBUG=false

# =================================================================
# CONFIGURATION LOGS
# =================================================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Fichier de log
LOG_FILE=logs/app.log

# =================================================================
# CONFIGURATION PAIEMENT MOBILE
# =================================================================

# Airtel Money
AIRTEL_MONEY_ENABLED=true
AIRTEL_API_KEY=your_airtel_api_key_here
AIRTEL_API_SECRET=your_airtel_api_secret_here

# MobiCash
MOBICASH_ENABLED=true
MOBICASH_API_KEY=your_mobicash_api_key_here
MOBICASH_API_SECRET=your_mobicash_api_secret_here

# =================================================================
# CONFIGURATION SECURITE
# =================================================================

# Clé secrète pour les sessions (générer une clé aléatoire)
SECRET_KEY=changez_cette_cle_secrete_par_une_valeur_aleatoire

# Activer HTTPS (true/false)
ENABLE_HTTPS=false

# =================================================================
# CONFIGURATION ALERTES
# =================================================================

# Email pour les alertes critiques
ALERT_EMAIL=admin@mairie.local

# Seuil d'anomalie (en pourcentage)
ANOMALY_THRESHOLD=20

# =================================================================
# CONFIGURATION BACKUP
# =================================================================

# Répertoire des sauvegardes
BACKUP_DIR=backups

# Rétention des sauvegardes (en jours)
BACKUP_RETENTION_DAYS=30

# Sauvegarde automatique (true/false)
AUTO_BACKUP=true
